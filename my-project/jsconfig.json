{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "/*",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "paths": {
      "@app/*": ["./app/*"],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  }
}
